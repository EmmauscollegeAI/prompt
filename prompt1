<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactief Stappenplan AI Prompts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .step {
            margin-bottom: 20px;
        }
        .step h2 {
            color: #0056b3;
        }
        .output {
            margin-top: 30px;
            padding: 15px;
            border: 1px solid #ccc;
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <h1>Stappenplan AI Prompts</h1>

    <div class="step">
        <h2>Stap 1: Definieer de rol van de AI</h2>
        <input type="text" id="role" placeholder="Bijv. Ervaren onderwijscoach" style="width: 100%;">
    </div>

    <div class="step">
        <h2>Stap 2: Geef de context</h2>
        <textarea id="context" placeholder="Beschrijf de doelgroep en doelstelling" style="width: 100%; height: 100px;"></textarea>
    </div>

    <div class="step">
        <h2>Stap 3: Stel duidelijke instructies op</h2>
        <textarea id="instructions" placeholder="Bijv. Ontwerp 3 multiple-choice vragen" style="width: 100%; height: 100px;"></textarea>
    </div>

    <div class="step">
        <h2>Stap 4: Bepaal de toon</h2>
        <select id="tone" style="width: 100%;">
            <option value="informeel">Informeel</option>
            <option value="formeel">Formeel</option>
            <option value="inspirerend">Inspirerend</option>
        </select>
    </div>

    <div>
        <button onclick="generatePrompt()">Genereer Prompt</button>
    </div>

    <div class="output" id="output"></div>

    <script>
        function generatePrompt() {
            const role = document.getElementById('role').value;
            const context = document.getElementById('context').value;
            const instructions = document.getElementById('instructions').value;
            const tone = document.getElementById('tone').value;

            const prompt = `Jij bent ${role}. ${context} ${instructions}. Schrijf dit in een ${tone} toon.`;
            document.getElementById('output').innerText = prompt;
        }
    </script>
</body>
</html>
